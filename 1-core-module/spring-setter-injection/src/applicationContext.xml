<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
    http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!-- Define your beans here -->

    <!-- define the dependency -->
    <bean id="myFortuneService"
          class="com.martimlima.springcourse.coremodule.setterinjection.HappyFortuneService">
    </bean>

    <bean id="myCoach"
          class="com.martimlima.springcourse.coremodule.setterinjection.BaseballCoach">

        <!-- set up constructor injection -->
        <constructor-arg ref="myFortuneService" />
    </bean>

    <bean id="myCricketCoach"
          class="com.martimlima.springcourse.coremodule.setterinjection.CricketCoach">

        <!-- set up setter injection -->
        <property name="fortuneService" ref="myFortuneService" />

    </bean>

</beans>